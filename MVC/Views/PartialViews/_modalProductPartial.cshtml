@using DataAccess.Models

@model ProductViewModel

<div class="modal fade" id="productModal-@Model.Id" tabindex="-1" aria-labelledby="productModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="productModalLabel">@Model.Name</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="product-details">
                    <div id="carouselProductImages" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            @if (Model.UrlPictures.Count > 0)
                            {
                                @foreach (var picture in Model.UrlPictures)
                                {
                                    <div class="carousel-item @(Model.UrlPictures.First() == picture ? "active" : "")">
                                        <img src="@picture" class="d-block mx-auto w-50" alt="@Model.Name">
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="carousel-item active">
                                    <img src="@Url.Content("~/images/defaultimage.jpg")" class="d-block mx-auto w-50" alt="@Model.Name">
                                </div>
                            }
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselProductImages" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Anterior</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselProductImages" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Siguiente</span>
                        </button>
                    </div>
                    <div class="container mt-4">
                        <div class="row">
                            <div class="col-md-12">
                                <p><strong>Producto Id:</strong> @Model.Id</p>
                                <p><strong>SKU:</strong> @Model.SKU</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <p><strong>Descripción:</strong> @Model.Description</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Precio:</strong> @Model.Price @Model.Currency</p>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
